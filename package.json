{
  "name": "sunnyscreen",
  "version": "1.0.0",
  "description": "Sunrise alarm app that gently brightens your screen to wake you up",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "alarm",
    "sunrise",
    "wake-up"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "playwright": "^1.56.0"
  },
  "build": {
    "appId": "com.sunnyscreen.app",
    "productName": "Sunrise Alarm",
    "artifactName": "${productName}-${version}.${ext}",
    "mac": {
      "category": "public.app-category.lifestyle",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "files": [
      "main.js",
      "alarm-utils.js",
      "config.html",
      "alarm.html",
      "icon.png",
      "package.json"
    ]
  }
}
